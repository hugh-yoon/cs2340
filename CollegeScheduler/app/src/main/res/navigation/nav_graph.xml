<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivityFragment">

    <fragment
        android:id="@+id/mainActivityFragment"
        android:name="com.example.collegescheduler.MainActivity"
        android:label="mainActivityFragment"
        tools:layout="@layout/mainActivity" >
        <action
            android:id="@+id/activity_main_to_story1"
            app:destination="@id/fragment_story1" />
        <action
            android:id="@+id/activity_main_to_story2"
            app:destination="@id/fragment_story2" />
        <action
            android:id="@+id/activity_main_to_story3"
            app:destination="@id/fragment_story3" />
        <action
            android:id="@+id/activity_main_to_story4"
            app:destination="@id/fragment_story4" />
    </fragment>

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.collegescheduler.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />

    <fragment
        android:id="@+id/fragment_story1"
        android:name="com.example.collegescheduler.Story1Fragment"
        android:label="fragment_story1"
        tools:layout="@layout/fragment_story1">
        <action
            android:id="@+id/action_story1_to_mainActivity"
            app:destination="@id/mainActivityFragment" />
    </fragment>

    <fragment
        android:id="@+id/fragment_story2"
        android:name="com.example.collegescheduler.Story2Fragment"
        android:label="fragment_story2"
        tools:layout="@layout/fragment_story2">
        <action
            android:id="@+id/action_story2_to_mainActivity"
            app:destination="@id/mainActivityFragment" />
    </fragment>

    <fragment
        android:id="@+id/fragment_story3"
        android:name="com.example.collegescheduler.Story3Fragment"
        android:label="fragment_story3"
        tools:layout="@layout/fragment_story3" >
        <action
            android:id="@+id/action_story3_to_mainActivity"
            app:destination="@id/mainActivityFragment" />
    </fragment>
</navigation>